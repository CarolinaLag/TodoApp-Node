<!DOCTYPE html>
<head>
  <title>Todo App</title>
  <link rel="stylesheet" href="/static/css/main.css" type="text/css" />
  <link
    href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay"
    crossorigin="anonymous"
  />
</head>
<body>
  <div class="todoContainer">
    <h2 class="todoHeading">Todo List</h2>
    <div class="todo">
      <form
        action="/"
        method="post"
        class="todoHeader"
      >
        <input type="text" class="todoInput" name="content" />
        <button type="submit" class="subBtn">
          <span class="fas fa-plus"></span>
        </button>
      </form>

      <ul class="todoList">
        <%- include("./sortTodo.ejs") %> <% todoTasks.forEach(todo => { %>
        <li class="todoListItem">
          <div class="todoName"><%= todo.content %></div>
          <div class="todoName">
            <%= todo.date.toString().split(' ').splice(0, 4);%>
          </div>

          <a
            href="/edit/<%= todo._id %>?page=<%= page %>&&sorted=<%= sorted %>"
            class="edit"
          >
            <span class="fas fa-edit"></span>
          </a>
          <a href="/remove/<%= todo._id %>" class="remove">
            <span class="fas fa-trash"></span>
          </a>
        </li>
        <% }) %>
      </ul>
      <%- include("./pagination.ejs") %>
    </div>
  </div>
</body>
