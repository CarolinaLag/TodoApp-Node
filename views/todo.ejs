<!DOCTYPE html>
<head>
  <title>Todo App</title>
  <link rel="stylesheet" href="/static/css/main.css" type="text/css" />
  <link
    href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay"
    crossorigin="anonymous"
  />
</head>
<body>
  <div class="todo-container">
    <h2 class="todo-heading">Todo List</h2>
    <div class="todo">
      <form action="/" method="post" class="todo-header">
        <input type="text" class="todo-input " name="content" />
        <button type="submit" class="sub-btn">
          <span class="fas fa-plus"></span>
        </button>
      </form>

      <ul class="todo-list">
        <%- include("./sortTodo.ejs") %> 
        
        <% todoTasks.forEach(todo => { %>
        <li class="todo-list-item">
          <div class="todo-list-item-name"><%= todo.content %></div>
          <div class="todo-list-item-name">
            <%= todo.date.toString().split(' ').splice(0, 4);%>
          </div>
          
            <a href="/edit/<%= todo._id %>" class="edit">
              <span class="fas fa-edit"></span>
            </a>
            <a href="/remove/<%= todo._id %>" class="remove">
              <span class="fas fa-trash"></span>
            </a>
          
        </li>
        <% }) %>
      </ul>
      <%- include("./pagination.ejs") %>
    </div>
  </div>
</body>
