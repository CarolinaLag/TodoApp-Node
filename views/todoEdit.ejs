<!DOCTYPE html>
<head>
  <title>Todo App</title>
  <link rel="stylesheet" href="/static/css/main.css" type="text/css" />
  <link
    href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay"
    crossorigin="anonymous"
  />
</head>
<body>
  <div class="todoContainer">
    <h2 class="todoHeading">Todo List</h2>
    <div class="todo">
      <form action="" method="post" class="todoHeader">
        <input
          type="text"
          class="todoInput"
          required
          minlength="1"
          maxlength="20"
          name="content"
        />
        <button type="submit" class="subBtn">
          <span class="fas fa-plus"></span>
        </button>
      </form>
      <ul class="todoList">
        <% todoTasks.forEach(todo => { %> <% if (todo._id == idTask) { %>
        <li class="todoListItem">
          <form action="/edit/<%= todo._id %>" method="post">
            <input
              type="text"
              value="<%= todo.content %>"
              required
              minlength="1"
              maxlength="20"
              name="content"
            />
            <button type="submit"><i class="fas fa-check"></i></button>
            <a href="/?page=<%= page %>&&sorted=<%= sorted %>" class="cancel"
              ><i class="fas fa-times"></i
            ></a>
          </form>
        </li>
        <% } else { %>
        <li class="todoListItem">
          <div class="todoName"><%= todo.content %></div>
          <a href="/edit/<%= todo._id%>?page=<%= page %>" class="edit">
            <span class="fas fa-edit"></span>
          </a>
          <a href="/remove/<%= todo._id %>?page=<%= page %>" class="remove">
            <span class="fas fa-times"></span>
          </a>
        </li>
        <% } %> <% }) %>
      </ul>
    </div>
  </div>
</body>
